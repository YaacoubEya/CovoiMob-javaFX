<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.DropShadow?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.ChangePasswordController" spacing="20" alignment="CENTER"
      style="-fx-background-color: #f0f9ff;">
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label text="Changer le mot de passe"
           style="-fx-font-weight: bold; -fx-font-size: 24px; -fx-text-fill: #0B3D91; -fx-font-family: 'Segoe UI', sans-serif;"/>

    <GridPane hgap="15" vgap="15"
              style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="150"/>
            <ColumnConstraints hgrow="ALWAYS" minWidth="250"/>
        </columnConstraints>

        <Label text="Ancien mot de passe:"
               style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #1e3a8a;"
               GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <HBox GridPane.rowIndex="0" GridPane.columnIndex="1" spacing="5" alignment="CENTER_LEFT">
            <PasswordField fx:id="oldPasswordField"
                           style="-fx-font-size: 14px; -fx-padding: 8px; -fx-background-radius: 8; -fx-border-radius: 8; -fx-min-width: 250;"/>
            <Button fx:id="toggleOldPassword" text="👁"
                    style="-fx-background-color: transparent; -fx-padding: 5; -fx-cursor: hand; -fx-font-size: 16px;"/>
        </HBox>

        <Label text="Nouveau mot de passe:"
               style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #1e3a8a;"
               GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <HBox GridPane.rowIndex="1" GridPane.columnIndex="1" spacing="5" alignment="CENTER_LEFT">
            <PasswordField fx:id="newPasswordField"
                           style="-fx-font-size: 14px; -fx-padding: 8px; -fx-background-radius: 8; -fx-border-radius: 8; -fx-min-width: 250;"/>
            <Button fx:id="toggleNewPassword" text="👁"
                    style="-fx-background-color: transparent; -fx-padding: 5; -fx-cursor: hand; -fx-font-size: 16px;"/>
        </HBox>

        <Label text="Confirmer le nouveau:"
               style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #1e3a8a;"
               GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <HBox GridPane.rowIndex="2" GridPane.columnIndex="1" spacing="5" alignment="CENTER_LEFT">
            <PasswordField fx:id="confirmPasswordField"
                           style="-fx-font-size: 14px; -fx-padding: 8px; -fx-background-radius: 8; -fx-border-radius: 8; -fx-min-width: 250;"/>
            <Button fx:id="toggleConfirmPassword" text="👁"
                    style="-fx-background-color: transparent; -fx-padding: 5; -fx-cursor: hand; -fx-font-size: 16px;"/>
        </HBox>
    </GridPane>

    <Label fx:id="errorLabel"
           style="-fx-text-fill: #ef4444; -fx-font-size: 14px; -fx-font-weight: bold;"
           visible="false"/>

    <HBox spacing="20" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
        <Button text="Valider" onAction="#handleChangePassword" defaultButton="true"
                style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-padding: 10 25; -fx-background-radius: 8; -fx-cursor: hand;">
            <effect>
                <DropShadow color="#60a5fa" radius="5"/>
            </effect>
        </Button>

        <Button text="Annuler" onAction="#handleCancel"
                style="-fx-background-color: #94a3b8; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-padding: 10 25; -fx-background-radius: 8; -fx-cursor: hand;">
            <effect>
                <DropShadow color="#cbd5e1" radius="5"/>
            </effect>
        </Button>
    </HBox>
</VBox>