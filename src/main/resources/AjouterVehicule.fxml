<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.AjouterVehiculeController"
            prefWidth="1200" prefHeight="800">

   <!-- Sidebar -->
   <left>
      <VBox fx:id="sidebar" prefWidth="240"
            style="-fx-background-color: linear-gradient(to bottom right, #F0F8FF, #D6EAF8, #AED6F1);
                     -fx-padding: 30 20 30 20;
                     -fx-spacing: 20;
                     -fx-background-radius: 0 30 30 0;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 20, 0.3, 4, 4);"
            alignment="TOP_CENTER">

         <HBox style="-fx-alignment: center; -fx-padding: 0 0 15 0;">
            <Label text="✨COVOIMOB✨"
                   style="-fx-font-size: 22px;
                              -fx-font-weight: bold;
                              -fx-text-fill: linear-gradient(to right, #2C3E50, #5DADE2);
                              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 4, 0.4, 2, 2);"/>
         </HBox>

         <!-- Profil en haut -->
         <HBox alignment="CENTER">
            <Label text="👤 Mon Profil"
                   style="-fx-font-size: 16px;
                              -fx-font-weight: bold;
                              -fx-text-fill: #34495E;
                              -fx-padding: 0 0 10 0;"/>
         </HBox>

         <!-- Boutons principaux -->
         <Button fx:id="btnVehicules" text="🚗 Mes Véhicules"
                 style="-fx-background-color: #EAF6FB;
                           -fx-text-fill: #1A5276;
                           -fx-font-size: 15px;
                           -fx-font-weight: 600;
                           -fx-background-radius: 20;
                           -fx-padding: 12 18 12 18;
                           -fx-border-color: #AED6F1;
                           -fx-border-width: 2;
                           -fx-border-radius: 20;
                           -fx-cursor: hand;
                           -fx-effect: dropshadow(gaussian, rgba(173,216,230,0.3), 8, 0.2, 1, 1);"
                 prefWidth="200" onAction="#handleAllVehiculesView"/>

         <Button fx:id="btnReservations" text="📅 Réservations"
                 style="-fx-background-color: #EAF6FB;
                           -fx-text-fill: #1A5276;
                           -fx-font-size: 15px;
                           -fx-font-weight: 600;
                           -fx-background-radius: 20;
                           -fx-padding: 12 18 12 18;
                           -fx-border-color: #AED6F1;
                           -fx-border-width: 2;
                           -fx-border-radius: 20;
                           -fx-cursor: hand;
                           -fx-effect: dropshadow(gaussian, rgba(173,216,230,0.3), 8, 0.2, 1, 1);"
                 prefWidth="200" onAction="#handleReservationsView"/>

         <!-- Spacer dynamique -->
         <Region VBox.vgrow="ALWAYS"/>

         <!-- Déconnexion en bas -->
         <Button fx:id="btnLogout" text="🚪 Déconnexion"
                 style="-fx-background-color: #FADBD8;
                           -fx-text-fill: #922B21;
                           -fx-font-size: 14px;
                           -fx-font-weight: bold;
                           -fx-background-radius: 20;
                           -fx-padding: 10 16 10 16;
                           -fx-border-color: #F5B7B1;
                           -fx-border-width: 2;
                           -fx-border-radius: 20;
                           -fx-cursor: hand;
                           -fx-effect: dropshadow(gaussian, rgba(255,0,0,0.2), 5, 0.1, 1, 1);"
                 prefWidth="200" />
      </VBox>
   </left>

   <!-- Centre avec le formulaire -->
   <center>
      <VBox alignment="CENTER" spacing="20" style="-fx-padding: 30;">
         <!-- Titre principal -->
         <Label text="🚗 Ajouter un Véhicule"
                style="-fx-font-size: 32px;
                          -fx-font-weight: bold;
                          -fx-text-fill: linear-gradient(to right, #001133, #003366);
                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 3, 0.3, 0, 2);"/>

         <!-- Conteneur principal avec image et formulaire -->
         <HBox alignment="CENTER" spacing="40" style="-fx-padding: 20;">
            <!-- Image à gauche -->
            <VBox alignment="CENTER" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);">
               <ImageView fitHeight="350" fitWidth="350">
                  <image>
                     <Image url="@/images/pic7.png" />
                  </image>
               </ImageView>
            </VBox>

            <!-- Formulaire à droite -->
            <VBox alignment="CENTER" spacing="20"
                  style="-fx-background-color: linear-gradient(to bottom, #c2e4fb, #eff6ff);
                            -fx-background-radius: 25;
                            -fx-border-radius: 25;
                            -fx-border-color: linear-gradient(to right, #001f4d, #003366);
                            -fx-border-width: 1;
                            -fx-padding: 30;
                            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0.3, 0, 5);">

               <!-- Grille de formulaire -->
               <GridPane hgap="20" vgap="15" alignment="CENTER">
                  <columnConstraints>
                     <ColumnConstraints percentWidth="50" />
                     <ColumnConstraints percentWidth="50" />
                  </columnConstraints>

                  <!-- Type de véhicule -->
                  <VBox spacing="5" GridPane.columnIndex="0">
                     <Label text="🚘 Type *" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                     <ComboBox fx:id="typeCombo" promptText="Sélectionnez un type"
                               style="-fx-background-radius: 12;
                                            -fx-border-radius: 12;
                                            -fx-border-color: #003366;
                                            -fx-border-width: 1.5;
                                            -fx-padding: 8 12;
                                            -fx-background-color: white;"/>
                  </VBox>

                  <!-- Modèle -->
                  <VBox spacing="5" GridPane.columnIndex="1">
                     <Label text="🏷️ Modèle *" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                     <TextField fx:id="modeleField" promptText="Ex: Toyota Corolla"
                                style="-fx-background-radius: 12;
                                             -fx-border-radius: 12;
                                             -fx-border-color: #003366;
                                             -fx-border-width: 1.5;
                                             -fx-padding: 8 12;
                                             -fx-background-color: white;"/>
                  </VBox>

                  <!-- Prix par heure -->
                  <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
                     <Label text="💰 Prix/heure (DT) *" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                     <TextField fx:id="prixHeureField" promptText="Ex: 20,50"
                                style="-fx-background-radius: 12;
                                             -fx-border-radius: 12;
                                             -fx-border-color: #003366;
                                             -fx-border-width: 1.5;
                                             -fx-padding: 8 12;
                                             -fx-background-color: white;"/>
                  </VBox>

                  <!-- Prix par jour -->
                  <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <Label text="💰 Prix/jour (DT) *" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                     <TextField fx:id="prixJourField" promptText="Ex: 150,00"
                                style="-fx-background-radius: 12;
                                             -fx-border-radius: 12;
                                             -fx-border-color: #003366;
                                             -fx-border-width: 1.5;
                                             -fx-padding: 8 12;
                                             -fx-background-color: white;"/>
                  </VBox>

                  <!-- Disponibilité -->
                  <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="2">
                     <Label text="⏱️ Disponibilité *" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                     <ComboBox fx:id="dispoCombo" promptText="Sélectionnez"
                               style="-fx-background-radius: 12;
                                            -fx-border-radius: 12;
                                            -fx-border-color: #003366;
                                            -fx-border-width: 1.5;
                                            -fx-padding: 8 12;
                                            -fx-background-color: white;"/>
                  </VBox>

                  <!-- Lieu de retrait -->
                  <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="2">
                     <Label text="📍 Lieu de retrait *" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                     <TextField fx:id="lieuRetraitField" promptText="Ex: Agence Tunis"
                                style="-fx-background-radius: 12;
                                             -fx-border-radius: 12;
                                             -fx-border-color: #003366;
                                             -fx-border-width: 1.5;
                                             -fx-padding: 8 12;
                                             -fx-background-color: white;"/>
                  </VBox>

                  <!-- Image -->
                  <VBox spacing="5" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3">
                     <Label text="🖼️ Image véhicule" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                     <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button fx:id="uploadButton" text="📁 Choisir Image" onAction="#handleBrowseImage"
                                style="-fx-background-color: linear-gradient(to right, #001f4d, #003366);
                                              -fx-text-fill: white;
                                              -fx-border-radius: 12;
                                              -fx-background-radius: 12;
                                              -fx-padding: 6 16;
                                              -fx-cursor: hand;"/>
                        <Label fx:id="imagePathLabel" text="Aucune sélection"
                               style="-fx-text-fill: #5D6D7E;"/>
                     </HBox>
                  </VBox>

                  <rowConstraints>
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                  </rowConstraints>
               </GridPane>

               <!-- Bouton Enregistrer -->
               <Button onAction="#handleAddVehicule" text="💾 Enregistrer"
                       style="-fx-background-radius: 25;
                                  -fx-text-fill: white;
                                  -fx-font-size: 16px;
                                  -fx-font-weight: bold;
                                  -fx-padding: 10 25;
                                  -fx-background-color: linear-gradient(to right, #001f4d, #003366);
                                  -fx-cursor: hand;
                                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 8, 0.3, 0, 4);"/>
            </VBox>
         </HBox>
      </VBox>
   </center>
</BorderPane>