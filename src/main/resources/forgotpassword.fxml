<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.ForgotPasswordController"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: white;">

    <VBox alignment="CENTER" spacing="30"
          style="-fx-background-color: linear-gradient(to bottom, #c2e4fb, #eff6ff);
                 -fx-background-radius: 25;
                 -fx-border-radius: 25;
                 -fx-border-color: linear-gradient(to right, #001f4d, #003366);
                 -fx-border-width: 1;
                 -fx-padding: 40;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0.3, 0, 5);
                 -fx-font-family: 'Segoe UI', sans-serif;"
          AnchorPane.topAnchor="50"
          AnchorPane.leftAnchor="50"
          AnchorPane.rightAnchor="50"
          AnchorPane.bottomAnchor="50">

        <Label text="🔍 Trouvez votre compte"
               style="-fx-font-size: 28px;
                      -fx-font-weight: bold;
                      -fx-text-fill: linear-gradient(to right, #001133, #003366);
                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 3, 0.3, 0, 2);" />

        <Label text="Veuillez entrer votre e-mail ou numéro de mobile pour rechercher votre compte."
               wrapText="true"
               style="-fx-text-fill: #002244; -fx-font-size: 14px;" />

        <TextField fx:id="emailOrPhoneField" promptText="E-mail ou numéro de mobile"
                   style="-fx-background-radius: 12;
                          -fx-border-radius: 12;
                          -fx-border-color: #003366;
                          -fx-border-width: 1.5;
                          -fx-padding: 8 12;
                          -fx-background-color: white;
                          -fx-pref-width: 300;" />

        <HBox spacing="20" alignment="CENTER">
            <Button text="Annuler" onAction="#handleCancel"
                    style="-fx-background-color: rgba(255,255,255,0.6);
                           -fx-text-fill: #002244;
                           -fx-font-size: 16px;
                           -fx-font-weight: bold;
                           -fx-background-radius: 10;
                           -fx-padding: 8 20;">
                <effect>
                    <DropShadow color="#d0e5ff" radius="4"/>
                </effect>
            </Button>

            <Button text="Rechercher" onAction="#handleSearch"
                    style="-fx-background-color: #005288;
                           -fx-text-fill: #ffffff;
                           -fx-font-size: 16px;
                           -fx-font-weight: bold;
                           -fx-background-radius: 10;
                           -fx-padding: 8 20;">
                <effect>
                    <DropShadow color="#a0c4ff" radius="6"/>
                </effect>
            </Button>
        </HBox>

        <Label fx:id="feedbackLabel"
               style="-fx-text-fill: #d9534f; -fx-font-weight: bold;"
               visible="false"/>
    </VBox>
</AnchorPane>